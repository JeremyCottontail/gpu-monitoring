[Unit]
Description=GPU Monitor Backend
After=network.target

[Service]
Type=simple
User=aiops
WorkingDirectory=/opt/gpu-monitoring/backend
EnvironmentFile=/opt/gpu-monitoring/backend/.env
ExecStart=/opt/gpu-monitoring/backend/.venv/bin/uvicorn app.main:app --host 0.0.0.0 --port 5000
Restart=on-failure
RestartSec=5

[Install]
WantedBy=multi-user.target

